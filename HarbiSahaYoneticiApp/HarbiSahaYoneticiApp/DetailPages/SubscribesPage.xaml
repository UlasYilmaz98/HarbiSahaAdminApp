                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" Opacity="0.5" ></BoxView>

                    <Label FontSize="Large" TextColor="#495764" Text="Pazar" FontAttributes="Bold" Margin="0,5,0,0"></Label>
